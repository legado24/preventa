<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"  xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/spacing_smlarge"
            android:layout_marginStart="@dimen/spacing_smlarge"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@color/material_grey_400" />

            <ImageView android:id="@+id/indicadorReparto"
                android:layout_width="@dimen/spacing_middle"
                android:layout_height="@dimen/spacing_middle"
                android:layout_marginTop="@dimen/spacing_large"
                android:tint="@color/material_green_400"
                app:srcCompat="@drawable/round_dialog" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_large">

                <RelativeLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="1dp">

                    <ImageView android:id="@+id/circuloReparto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:tint="@color/material_orange_400"
                        app:srcCompat="@drawable/circle_vector"
                        tools:ignore="VectorDrawableCompat" />

                    <ImageView android:id="@+id/flechaReparto"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerInParent="true"
                        android:tint="@color/material_red_800"
                        app:srcCompat="@drawable/ic_arrow_rebote" />

                </RelativeLayout>

                <View
                    android:layout_width="@dimen/spacing_middle"
                    android:layout_height="0dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView android:id="@+id/txtNroPedido" android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PE0001"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                        android:textColor="@color/main_color_grey_900" />


                    <TextView android:id="@+id/txtDescCliente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 jan 2018 11:20"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                        android:textColor="@color/material_green_700" />

                    <TextView android:id="@+id/txtMotivo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MOTIVO REBOTE"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                        android:textColor="@color/material_red_800" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView android:id="@+id/txtNroDocumento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="F000001"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/material_blue_700" />

                    <TextView android:id="@+id/txtMonto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.38 USD"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                        android:textColor="@color/material_orange_300" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>
