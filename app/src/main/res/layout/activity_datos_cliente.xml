<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.legado.preventagps.activities.vendedor.DatosClienteActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_weight="0.4" android:fillViewport="true">


    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto" card_view:cardBackgroundColor="@color/white"
            android:layout_width="match_parent" android:layout_margin="2dp"
            android:layout_height="wrap_content"  card_view:cardCornerRadius="10dp" android:focusable="false"
            card_view:cardElevation="6dp" >

            <LinearLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_margin="10dp">

                <TextView android:textStyle="bold"
                    android:id="@+id/lblCliente"     android:textAppearance="@style/TextViewAppearance.Headline3"
                    android:layout_width="match_parent" android:layout_marginTop="10dp"
                    android:layout_height="wrap_content" android:textSize="10sp"
                    android:text="Cliente:" />
                <com.legado.preventagps.font.RobotoTextView android:layout_height="wrap_content" android:layout_width="match_parent"
                android:id="@+id/txtDescripcion" android:text="xxxx"
                android:textAppearance="@style/TextViewAppearance.Body2"
                android:textSize="14sp" android:gravity="center" />
                <View android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/main_color_grey_400"
                android:id="@+id/linea"
                android:layout_above="@+id/compartir" >
                </View>

                <TextView
                    android:id="@+id/lblDireccion"  android:textStyle="bold"
                    android:layout_width="match_parent" android:layout_marginTop="10dp"
                    android:layout_height="wrap_content" android:textSize="10sp" android:textAppearance="@style/TextViewAppearance.Headline3"
                    android:text="Dirección:" />
                <com.legado.preventagps.font.RobotoTextView android:layout_height="wrap_content" android:layout_width="match_parent"
                    android:id="@+id/txtDireccion" android:text="xxxx" android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextViewAppearance.Body2"
                    android:textSize="14sp" android:gravity="center" />
                <View android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/main_color_grey_400"
                    android:id="@+id/linea2" />
                <TextView android:textStyle="bold"
                    android:id="@+id/lblLista"  android:textAppearance="@style/TextViewAppearance.Headline3"
                    android:layout_width="match_parent" android:layout_marginTop="10dp"
                    android:layout_height="wrap_content" android:textSize="10sp"
                    android:text="Lista de Precios:" />
                <com.legado.preventagps.font.RobotoTextView android:layout_height="wrap_content" android:layout_width="match_parent"
                    android:id="@+id/txtListaPrecios" android:text="xxxx" android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextViewAppearance.Body2"
                    android:textSize="14sp" android:gravity="center" />
                <View android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/main_color_grey_400"
                    android:id="@+id/linea3" />

                <TextView
                    android:id="@+id/lblLimite"
                    android:textStyle="bold"
                    android:layout_width="match_parent" android:layout_marginTop="10dp"
                    android:layout_height="wrap_content" android:textSize="10sp" android:textAppearance="@style/TextViewAppearance.Headline3"
                    android:text="Limite Crédito:" />
                <com.legado.preventagps.font.RobotoTextView android:layout_height="wrap_content" android:layout_width="match_parent"
                    android:id="@+id/txtLimiteCredito" android:text="xxxx"
                     android:textAppearance="@style/TextViewAppearance.Body2"
                    android:textSize="14sp" android:gravity="center" />
                <View android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/main_color_grey_400"
                    android:id="@+id/linea4" />
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/lblDeuda"
                    android:layout_width="match_parent" android:layout_marginTop="10dp"
                    android:layout_height="wrap_content" android:textSize="10sp"  android:textAppearance="@style/TextViewAppearance.Headline3"
                    android:text="Deuda:" />
                <com.legado.preventagps.font.RobotoTextView android:layout_height="wrap_content" android:layout_width="match_parent"
                    android:id="@+id/txtDeuda" android:text="xxxx"
                    android:textAppearance="@style/TextViewAppearance.Body2"
                    android:textSize="14sp" android:gravity="center" />
                <View android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/main_color_grey_400"
                    android:id="@+id/linea5" />
                <TextView android:textStyle="bold"
                    android:id="@+id/lblTipo"
                    android:layout_width="match_parent" android:layout_marginTop="10dp"
                    android:layout_height="wrap_content" android:textSize="10sp" android:textAppearance="@style/TextViewAppearance.Headline3"
                    android:text="Tipo Cliente:" />
                <com.legado.preventagps.font.RobotoTextView android:layout_height="wrap_content" android:layout_width="match_parent"
                    android:id="@+id/txtTipoCliente" android:text="xxxx" android:layout_marginTop="10dp"
                    android:textAppearance="@style/TextViewAppearance.Body2"
                    android:textSize="14sp" android:gravity="center" />
                <View android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/main_color_grey_400"
                    android:id="@+id/linea6" />
                <TextView android:textStyle="bold"
                    android:id="@+id/lblCategoria"
                    android:layout_width="match_parent" android:layout_marginTop="10dp"
                    android:layout_height="wrap_content" android:textSize="10sp" android:textAppearance="@style/TextViewAppearance.Headline3"
                    android:text="Categoria:" />
                <LinearLayout android:orientation="horizontal"
                    android:layout_width="wrap_content" android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <com.airbnb.lottie.LottieAnimationView android:id="@+id/logonivel"
                        android:layout_width="wrap_content"
                        fab:layout_constraintLeft_toLeftOf="parent"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        app:lottie_imageAssetsFolder="assets"
                        app:lottie_fileName="72-favourite-app-icon.json"

                        android:layout_height="75dp"
                        android:scaleType="fitStart" android:layout_gravity="center"
                        app:layout_constraintTop_toTopOf="@+id/relativeLayout2" />
                    <TextView  android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content" android:layout_gravity="center"
                        android:layout_height="match_parent" android:text="GOLD"/>

                </LinearLayout>


            </LinearLayout>



        </android.support.v7.widget.CardView>


    </LinearLayout>

    </ScrollView>
    <include layout="@layout/include_navigation" />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.roughike.bottombar.BottomBar
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom|end"
            android:layout_alignParentBottom="true"
            app:bb_inActiveTabAlpha="0.6"
            app:bb_activeTabAlpha="1"
            app:bb_inActiveTabColor="@color/white"
            android:background="@color/colorPrimary"
            app:bb_activeTabColor="@color/amber900"
            app:bb_badgesHideWhenActive="true"
            app:bb_tabXmlResource="@xml/bottombar_tabs" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </FrameLayout>










</android.support.v4.widget.DrawerLayout>
