<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="10dp" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout android:orientation="vertical" android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" android:background="@drawable/round_dialog">
        <com.airbnb.lottie.LottieAnimationView android:id="@+id/error"  android:adjustViewBounds="true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:lottie_imageAssetsFolder="assets"
            app:lottie_fileName="4386-connection-error.json"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Error en la conexion!!"
            android:textSize="20dp" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reintentar"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content" android:layout_gravity="center"
            android:layout_height="wrap_content" android:orientation="horizontal">

            <ImageButton
                android:id="@+id/reintentar" android:background="@android:color/transparent"
                android:layout_width="50sp"
                android:layout_height="50sp" android:tooltipText="Reintentar!!"
                android:text="Reintentar" android:src="@drawable/reintentar"
                android:scaleType="fitCenter" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>